<!-- item_reporte.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/item_reporte_background"> <!-- Fondo con sombreado o borde -->

    <!-- Código de Barras -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código de Barras:"
            android:textSize="14sp"
            android:textColor="#666" /> <!-- Color de texto más suave -->

        <TextView
            android:id="@+id/txtCodigoBarras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234567890"
            android:textSize="18sp"
            android:textColor="#333"
            android:layout_marginStart="8dp" /> <!-- Margen a la izquierda -->

    </LinearLayout>

    <!-- Tipo de Equipo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Equipo:"
            android:textSize="14sp"
            android:textColor="#666" /> <!-- Color de texto más suave -->

        <TextView
            android:id="@+id/txtTipoEquipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equipo A"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginStart="8dp" /> <!-- Margen a la izquierda -->

    </LinearLayout>

    <!-- Fecha y Hora -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha y Hora:"
            android:textSize="14sp"
            android:textColor="#666" /> <!-- Color de texto más suave -->

        <TextView
            android:id="@+id/txtFechaHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023-08-09 15:30"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginStart="8dp" /> <!-- Margen a la izquierda -->

    </LinearLayout>

    <!-- Texto "Mapa y Coordenadas" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mapa y Coordenadas"
        android:textSize="14sp"
        android:textColor="#666"
        android:drawableStart="@drawable/ic_map_pin"
        android:layout_marginTop="16dp" /> <!-- Espaciado superior -->

    <!-- Mapa -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp" /> <!-- Espaciado superior -->

</LinearLayout>
